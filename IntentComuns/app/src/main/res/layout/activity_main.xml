<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:background="@android:color/holo_blue_light">

    <Button
            android:layout_width="124dp"
            android:layout_height="89dp"
            android:id="@+id/btnDial"
            android:background="@android:drawable/stat_sys_phone_call"
            app:layout_constraintTop_toBottomOf="@+id/edPhone" android:layout_marginBottom="118dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.25"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:ems="10"
            android:id="@+id/edPhone"
            android:hint="Infome o telefone"
            android:layout_marginTop="191dp"
            android:layout_marginBottom="166dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/btnDial" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
    <Button
            android:text="Button"
            android:layout_width="97dp"
            android:layout_height="83dp" tools:layout_editor_absoluteY="397dp"
            tools:layout_editor_absoluteX="235dp" android:id="@+id/btnCall"/>

</android.support.constraint.ConstraintLayout>